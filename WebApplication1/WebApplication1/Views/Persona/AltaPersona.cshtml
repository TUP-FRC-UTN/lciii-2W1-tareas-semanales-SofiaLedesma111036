@model WebApplication1.Models.Persona
@{
    ViewBag.Title = "Alta de nueva persona";

    ViewBag.Title = "inregso de datos";
}

<h2>Alta de nueva persona</h2>
<form>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="form-group">
                <label>Nombre</label>
                @Html.TextBoxFor(x => x.Nombre, htmlAttributes: new { @id = "txtNombre" })
            </div>
            <div class="form-group">
                <label>Edad</label>
                @Html.TextBoxFor(x => x.Edad, htmlAttributes: new { @id = "txtEdad" })
            </div>
            <div class="form-group">
                <label>Telefono</label>
                @Html.TextBoxFor(x => x.Telefono, htmlAttributes: new { @id = "txtTelefono" })
            </div>
            <input type="submit" value="Guardar Persona" class="btn btn-primary" />
        </div>

        <div class="col-3"></div>

    </div>
</form>

